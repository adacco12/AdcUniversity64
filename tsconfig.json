    "node_modules/jqwidgets-scripts/jqwidgets-ts/angular_jqxgrid.ts",
    "node_modules/jqwidgets-scripts/jqwidgets-ts/angular_jqxwindow.ts",
    "node_modules/jqwidgets-scripts/jqwidgets-ts/angular_jqxbuttons.ts",
    "node_modules/jqwidgets-scripts/jqwidgets-ts/angular_jqxcheckbox.ts",
    "node_modules/jqwidgets-scripts/jqwidgets-ts/angular_jqxlistbox.ts"
